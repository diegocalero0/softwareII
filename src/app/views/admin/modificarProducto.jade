extends ../layout.jade
block contenido
	div(class = "container pt-4 formregistro")
		h1 Modificar producto
		br
		form(action = "/admin/confirmarmodificacion" method = "POST" enctype="multipart/form-data")
			div(class = "form-group row")
				label(for="referencia" class="col-md-2 col-form-label") Referencia:
				input(type = "number" placeholder = "Código de referencia" name = "referencia" id = "referencia" class = "form-control col-md-6" required = "required" value = "#{producto.id}" readonly)
			div(class = "form-group row")
				label(for="nombre" class="col-md-2 col-form-label") Nombre:
				input(type = "text" placeholder = "Nombre del producto" name = "nombre" id = "nombre" class = "form-control col-md-6" required = "required" value = "#{producto.nombre}")
			div(class = "form-group row")
				label(for="imagen" class = "col-md-2 col-form-label") Imagen:
				div(class = "col-md-2")
					img(src="/static/images/productos/#{producto.foto}" class = "imgproducto")
				input(type = "file" class="form-control-file col-md-4" id="imagen" name = "imagen")
			div(class = "form-group row")
				label(for="descripcion" class="col-md-2 col-form-label") Descripción:
				input(type = "text" placeholder = "Descripción del producto" name = "descripcion" id = "descripcion" class = "form-control col-md-6" required = "required" value = "#{producto.descripcion}")
			div(class = "form-group row")
				label(for="precio" class="col-md-2 col-form-label") Precio de venta:
				input(type = "number" placeholder = "Precio del producto" name = "precio" id = "precio" class = "form-control col-md-6" required = "required" value = "#{producto.precio}")
			div(class = "form-group row")
				label(for="cantidad" class="col-md-2 col-form-label") Cantidad:
				input(type = "number" placeholder = "Cantidad" name = "cantidad" id = "cantidad" class = "form-control col-md-6" required = "required" value = "#{producto.cantidad}")
			div(class = "form-group row")
				label(for="materiales" class="col-md-2 col-form-label") Materiales:
				input(type = "text" placeholder = "Materiales del producto" name = "materiales" id = "materiales" class = "form-control col-md-6" required = "required" value = "#{producto.material}")
			div(class = "form-group row pl-0")
				div(class = "col-5")
					div(class = "btn btn-primary btn-block" data-toggle="modal" data-target="#confirmarEliminacion") Guardar cambios
					div(class = "modal fade" id="confirmarEliminacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
											div(class = "modal-dialog" role="document")
												div(class = "modal-content")
													div(class = "modal-header")
														h5(class = "modal-title") Modificar producto
														button(type = "button" class = "close" data-dismiss = "modal" aria-label="Close")
															span(aria-hidden = "true") &times;
													div(class = "modal-content")
														div(class = "container pt-4 pb-4")
															p ¿Desea modificar el producto?
													div(class = "modal-footer")
														button(type = "button" class = "btn btn-secondary" data-dismiss="modal") Cancelar
														button(type = "submit" class = "btn btn-primary") Guardar cambios
				div(class = "col-3")
					a(href = "/admin/productos" class = "btn btn-secondary btn-block") Cancelar