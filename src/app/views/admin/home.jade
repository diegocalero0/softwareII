extends ./layout.jade
block contenido
	div(class = "container pt-4 pb-4")
		p(class = "infadm") Usuario: #{usuario}
		h1 Agregar Administrador
		form(action="/admin/agregaradmin" method= "POST")
			div(class="form-group")
				label(for="correo") Email address
				input(type="email" class="form-control" id="correo" aria-describedby="emailHelp" placeholder="Ingresar correo electronico")
				label(for="contraseña") Contraseña
				input(type="contraseña" class="form-control" id="contraseña" aria-describedby"contraseñaHelp" placeholder="Ingresar contraseña")	
			button(type="submit" class="btn btn-primary") Agresar
		